<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/ubicomplogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:contentDescription="@string/image_ubicomp_title"
        android:scaleType="centerCrop"
        android:src="@drawable/zurich" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.1"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="4dip" >

            <TextView
                android:id="@+id/welcomeTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/welcomeMessageTitle"
                android:textAppearance="?android:attr/textAppearanceLarge" />
            
            <TextView
                android:id="@+id/welcomeMessageTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@string/welcomeMessageText"/>
            

        
    </LinearLayout>

</ScrollView>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom">
    <Button
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dip"
        	android:paddingLeft="5dip"
        	android:paddingRight="5dip"
        	android:paddingTop="15dip"
        	android:textColor="@color/white"
        	android:textSize="@dimen/text_title_size"
        	android:textStyle="bold" 
        	android:layout_gravity="center"
        	android:layout_marginLeft="3dp"
        	android:layout_marginRight="3dp"
        	android:layout_marginTop="15dp"
        	android:layout_marginBottom="15dp"
        	android:background="@color/blueUbicomp"
            android:text="@string/button_continue" />
</LinearLayout>
</LinearLayout>